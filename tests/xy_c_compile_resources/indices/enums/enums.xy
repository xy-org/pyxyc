# --- Type Enums ---

struct Enum {
    value: Int,
}

struct Status {
    value: Int,

    pending : pseudo = Enum{1},
    canceled : pseudo = Enum{2},
    processed : pseudo = Enum{4},
}

func get(st: Any, test: Enum) st.value == test.value;

func set(st: mut Any, val: Enum, on: Bool) =
    st.value = val.value * on + st.value * on'not;

func cmp(lhs: Any, rhs: Status) = cmp(lhs.value, rhs.value);

func printStatus(st: Status) {
    if (st.pending) {
        # ...
    } elif (st.canceled) {
        # ...
    } elif (st.processed) {
        # ...
    }
}

func testEnums(a: Int) {
    orderStatus := Status{+pending};
    printStatus(orderStatus);

    printStatus(Status{+processed});

    st : mut = Status{+canceled};
    if (a > 0) {
        st = Status{+processed};
    }
    printStatus(st);
}
