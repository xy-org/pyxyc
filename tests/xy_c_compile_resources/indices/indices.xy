import xy.ctti;

struct Point {
    x: Float,
    y: Float,
    z: Float,
    w: Float = 1.0f,
}

func select(p: Point, idx: Int) -> p[ Int ] {
    return idx;
}

func get(p: Point, idx: Int) -> Float {
    return @{p.x, p.y, p.z, p.w}[idx];
}

func set(p: mut Point, idx: Int, v: Float)
>> idx <= 3
{
    if (idx == 0) {
        p.x = v;
    } elif (idx == 1) {
        p.y = v;
    } elif (idx == 2) {
        p.z = v;
    } else {
        p.w = v;
    }
}

func testPoint(i: Int) -> Float {
    p1: mut = Point{w=i'to(Float)};
    p2: Point;
    p1.x = p1[i];
    p2.z = p1[4-i];
    sum := p1.x + p2[2] + p2.z + p1[3];
    res : mut = p1[0];
    p2[0] = p1[0];
    res += p2[0];
    return res + sum;
}

