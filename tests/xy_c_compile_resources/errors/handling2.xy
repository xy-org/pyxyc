struct Error {
    code: Int;
}

func to(err: Error, :Bool) err.code != 0;

func errorProne(num: Int) -> Int | Error {
    if (num > 10_000) {
        error Error{num};
    }
    return num * 2;
}

func test1(x: Int) -> Int {
    err := | errorProne(x + 1) |;
    return err.code;
}

func mix(a: Int, b: Int) -> Int {
    return a * b + a / b;
}

func test2(x: Int) -> Int {
    err := | mix(errorProne(x + 1), errorProne(x * 10)) |;
    return err.code;
}